# Misc
alias httpd='screen -S httpd python -m SimpleHTTPServer 8080'
alias oct='octave -q'
alias sr='screen -r'
alias ss='DISPLAY=:0 import -window root'
alias t='tar -axvf'
alias tmp='mkdir /tmp/$$ ; cd /tmp/$$'
alias untmp='rm -rf /tmp/$$'

# Media
alias adump='mplayer -vc dummy -vo null -ao pcm'
alias m='vlc --play-and-exit --qt-minimal-view'
alias ms='vlc --random'
alias npr='mplayer http://wamu-1.streamguys.com'
alias y='youtube-dl -t'

# Emacs
alias e='emacsclient -ca ""'
alias et='emacsclient -ta ""'
alias vi='emacsclient -ta ""'

# Debian
alias ins='sudo apt-get install'
alias sapt='apt-cache search'

# Tweak standard commands
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'
alias grep='grep --color=auto'
alias l='ls -CF'
alias la='ls -A'
alias ll='ls -alF'
alias ls='ls --color=auto'
alias p='pushd'
alias po='popd'
