# Misc
alias httpd='screen -S httpd python -m SimpleHTTPServer 8001'
alias oct='octave -q'
alias sr='screen -dr'
alias ss='DISPLAY=:0 import -window root'
alias t='tar -axvf'
alias tmp='mkdir /tmp/$$ ; cd /tmp/$$'
alias untmp='rm -rf /tmp/$$'
alias q32='qemu-system-i386 --enable-kvm -m 1536'
alias q64='qemu-system-x86_64 --enable-kvm -m 1536'
alias hr='printf $(printf "%%%ds\n" $(tput cols)) | tr " " ='
alias sql='sqlite3 -interactive :memory:'

# Media
alias adump='mplayer -vc dummy -vo null -ao pcm'
alias m='vlc --play-and-exit --qt-minimal-view --quiet'
alias ms='vlc --random --quiet --qt-minimal-view'
alias npr='mplayer http://wamu-1.streamguys.com'
alias y='youtube-dl --format mp4 --title --no-mtime --restrict-filenames'

# Emacs
alias e='emacsclient -ca ""'
alias et='emacsclient -ta ""'
alias ebc='emacs -Q -batch -f batch-byte-compile'

# Debian
alias ins='sudo apt-get install'
alias sapt='apt-cache search'
alias a='sudo apt-get '
alias d='sudo systemctl'
alias reportbug='reportbug --gnupg'

# Dev
alias g='git'
alias q='quilt'
alias gdb='gdb -q'

# Tweak standard commands
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'
alias grep='grep --color=auto'
alias l='ls -CF'
alias la='ls -A'
alias ll='ls -alF'
alias ls='ls --color=auto'
alias p='pushd'
alias po='popd'
alias s='less -SR'
alias bat="acpitool -b"
alias pu='pumount'
alias pm='pmount'
