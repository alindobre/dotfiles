## -*- default-directory: "~/.dotfiles/"; -*-

[user]
    name = Christopher Wellons

[core]
    autoclrf = false
    whitespace = cr-at-eol

[color]
    branch = auto
    diff = auto
    interactive = auto
    status = auto

[fetch]
    prune = true

[push]
    default = simple

[alias]
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
    optimize = repack -a -d -f --depth=250 --window=250
    pf = pull --ff-only
    pr = !sh -c 'git fetch origin pull/$1/head:pr-$1' -
    host = daemon --base-path=. --reuseaddr --export-all
    whost = daemon --base-path=. --reuseaddr --export-all --enable=receive-pack
    ca = commit -am
    cm = commit -m

[sendemail]
    smtpserver = localhost
    smtpserverport = 2525
